extends: default

rules:
  # 行の長さ制限
  line-length:
    max: 120
    level: warning

  # インデント
  indentation:
    spaces: 2
    indent-sequences: true

  # 改行文字
  new-line-at-end-of-file: enable

  # 末尾の空白
  trailing-spaces: enable

  # 空行
  empty-lines:
    max: 1
    max-end: 1

  # 引用符
  quotes:
    quote-type: single
    required: false

  # ドキュメント区切り
  document-start: disable

  # コメント
  comments:
    min-spaces-from-content: 1

  # キーの重複
  key-duplicates: enable

  # 真偽値
  truthy:
    check-keys: false
